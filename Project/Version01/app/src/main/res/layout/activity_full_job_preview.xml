<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fullJobPreview">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#95552C"
        >


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:text="Hello,"
            android:textColor="@android:color/white"
            android:textStyle="bold"

            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Student name"
            android:textColor="@android:color/white"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/menibarID"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/menu"
            android:layout_gravity="right"

            />



    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"

            >


            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="JOB TITLE"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jobTitlePreviewID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:hint="Job title"
                android:inputType="textPersonName"
                android:text="" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="JOB TYPE"
                android:textColor="@color/black"
                android:textStyle="bold" />

           <TextView
               android:layout_gravity="center"
               android:id="@+id/jobtypepreviewID"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:text=""
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="LOCATION"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jobLocationPreviewID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter job location here"
                android:inputType="textPersonName"
                android:text="" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="SALARY"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/salaryPreviewID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter salary here "
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="APPLY DEADLINE"
                android:textColor="@color/black"
                android:textStyle="bold" />

           <TextView
               android:id="@+id/deadlinepreviewID"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:gravity="center"
               android:layout_gravity="center"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="INTERVIEW DATE"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/interviewpreviewID"
                android:gravity="center"
                android:layout_gravity="center"
                android:text=""
                />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="JOB INFORMATION"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jobInformationpreviewID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter job informations here"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="OTHER BENEFITS"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/otherBenefitpreviewID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter other benefits here"
                android:inputType="textPersonName"
                android:text="" />


            <Button
                android:id="@+id/submitJobpostID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="APPLY"
                android:textColor="#95552C"
                android:outlineSpotShadowColor="@color/white"
                android:layout_gravity="center"

                />


        </LinearLayout>


    </ScrollView>
</LinearLayout>